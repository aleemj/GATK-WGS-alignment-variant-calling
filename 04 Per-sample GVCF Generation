#File: scripts/04_haplotypecaller.sh

#!/bin/bash
#PBS -N haplotypecaller
#PBS -l select=1:ncpus=8:mem=30gb
#PBS -j oe

module load gatk

SAMPLE=$1
REF=reference/genome.fa
IN=bam/${SAMPLE}.recal.bam
OUT=gvcf/${SAMPLE}.g.vcf.gz

gatk HaplotypeCaller \
  -R $REF \
  -I $IN \
  -O $OUT \
  -ERC GVCF


#Submit:
for s in $(ls samples); do qsub scripts/04_haplotypecaller.sh $s; done

